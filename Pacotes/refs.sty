\DeclareOption*{
	\IfFileExists{\CurrentOption}
		{\edef\@@tmp{\noexpand\addbibresource{\CurrentOption}}\@@tmp}
		{\PackageWarning{refs}{‘\CurrentOption’ not found}}
}
